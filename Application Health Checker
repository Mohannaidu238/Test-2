import requests

# URL of the application to check
APP_URL = "http://example.com"  # Replace with your application's URL

# Function to check application status
def check_application_status():
    try:
        response = requests.get(APP_URL, timeout=5)
        if response.status_code == 200:
            print(f"Application at {APP_URL} is UP and running.")
        else:
            print(f"Application at {APP_URL} is DOWN (HTTP {response.status_code} error).")
    except requests.RequestException as e:
        print(f"Failed to connect to {APP_URL}: {str(e)}")
        print(f"Application at {APP_URL} is DOWN.")

# Main function
def main():
    print(f"Checking status of application at {APP_URL}:")
    check_application_status()

if __name__ == "__main__":
    main()
